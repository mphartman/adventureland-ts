{
  "name": "adventureland",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@types/node": "^16.11.56",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.2",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "jest-extended": "^3.1.0",
    "jest-mock-extended": "^2.0.7",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4"
  },
  "scripts": {
    "clean": "rimraf dist generated",
    "prebuild": "yarn gen",
    "build": "tsc --project .",
    "pregen": "yarn clean",
    "gen": "antlr4ts -o generated -visitor grammar/Adventure.g4",
    "format": "prettier --write .",
    "lint": "eslint --max-warnings 0 .",
    "test": "jest"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "overrides": [
      {
        "files": [
          "tests/**"
        ],
        "plugins": [
          "jest"
        ],
        "extends": [
          "plugin:jest/recommended"
        ],
        "rules": {
          "jest/prefer-expect-assertions": "off"
        }
      }
    ],
    "rules": {
      "no-console": 1,
      "prettier/prettier": 2
    }
  },
  "eslintIgnore": [
    "grammar",
    "generated",
    "dist",
    "jest.config.js"
  ]
}
